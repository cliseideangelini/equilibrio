generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL") // Uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // Uses a direct connection
}

enum AppointmentType {
  ONLINE
  PRESENCIAL
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

model Psychologist {
  id            String         @id @default(cuid())
  name          String
  email         String         @unique
  crp           String
  bio           String
  phone         String?
  availabilities Availability[]
  appointments  Appointment[]
}

model Availability {
  id             String       @id @default(cuid())
  dayOfWeek      Int          // 0 = Domingo, 1 = Segunda...
  startTime      Int          // Minutos desde a meia-noite
  endTime        Int          // Minutos desde a meia-noite
  psychologist   Psychologist @relation(fields: [psychologistId], references: [id])
  psychologistId String
}

model Patient {
  id           String        @id @default(cuid())
  name         String
  email        String?       @unique
  phone        String        @unique
  password     String?       // Opcional para pacientes antigos, obrigat√≥rio para novos
  appointments Appointment[]
  createdAt    DateTime      @default(now())
}

model Appointment {
  id             String            @id @default(cuid())
  startTime      DateTime
  endTime        DateTime
  status         AppointmentStatus @default(PENDING)
  type           AppointmentType   @default(ONLINE)
  meetLink       String?
  psychologist   Psychologist      @relation(fields: [psychologistId], references: [id])
  psychologistId String
  patient        Patient           @relation(fields: [patientId], references: [id])
  patientId      String
  payment        Payment?
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
}

model Payment {
  id            String    @id @default(cuid())
  amount        Float
  status        String    // PAID, PENDING, REFUNDED
  method        String?   // PIX, CARD, etc
  appointment   Appointment @relation(fields: [appointmentId], references: [id])
  appointmentId String    @unique
  paidAt        DateTime?
  createdAt     DateTime  @default(now())
}
